{
  "name": "@soluto-asurion/kamus-cli",
  "version": "0.3.0",
  "description": "CLI Tool to encrypt secrets for kamus",
  "main": "index.js",
  "scripts": {
    "test": "node_modules/.bin/mocha ./test/*.spec.js --exit",
    "eslint": "eslint . --ignore-pattern node_modules/",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soluto/kamus.git"
  },
  "bin": {
    "kamus-cli": "lib/index.js"
  },
  "keywords": [
    "Secrets",
    "Kubernetes",
    "Kamus",
    "GitOps"
  ],
  "author": "Shai Katz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/soluto/kamus/issues"
  },
  "homepage": "https://github.com/soluto/kamus#readme",
  "dependencies": {
    "adal-node": "^0.2.0",
    "bluebird": "^3.5.3",
    "caporal": "^1.1.0",
    "colorful-chalk-logger": "^0.4.0",
    "enquirer": "^2.3.0",
    "node-fetch": "^2.3.0",
    "opn": "^5.4.0",
    "request": "^2.88.0",
    "snyk": "1.291.0",
    "url-join": "^4.0.1"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "eslint": "6.8.0",
    "eslint-plugin-security": "1.4.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.7",
    "mocha": "7.0.1",
    "mock-fs": "4.10.4",
    "nock": "11.9.0",
    "sinon": "8.1.1"
  },
  "files": [
    "/lib",
    "yarn.lock"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --reporter min"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint",
        "git add"
      ]
    }
  },
  "snyk": true
}
