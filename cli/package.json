{
  "name": "@soluto-asurion/kamus-cli",
  "version": "0.2.7",
  "description": "CLI Tool to encrypt secrets for kamus",
  "main": "index.js",
  "scripts": {
    "test": "node_modules/.bin/mocha ./test/*.spec.js --exit",
    "eslint": "eslint . --ignore-pattern node_modules/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soluto/kamus.git"
  },
  "bin": {
    "kamus-cli": "lib/index.js"
  },
  "keywords": [
    "Secrets",
    "Kubernetes",
    "Kamus",
    "GitOps"
  ],
  "author": "Shai Katz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/soluto/kamus/issues"
  },
  "homepage": "https://github.com/soluto/kamus#readme",
  "dependencies": {
    "adal-node": "^0.1.28",
    "bluebird": "^3.5.3",
    "caporal": "^1.1.0",
    "colorful-chalk-logger": "^0.3.2",
    "node-fetch": "^2.3.0",
    "opn": "^5.4.0",
    "prompt-confirm": "^2.0.4",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "eslint": "5.16.0",
    "eslint-plugin-security": "1.4.0",
    "husky": "2.2.0",
    "lint-staged": "8.1.6",
    "mocha": "5.2.0",
    "mock-fs": "4.9.0",
    "nock": "10.0.6",
    "sinon": "7.3.2"
  },
  "files": [
    "/lib",
    "yarn.lock"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --reporter min"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint",
        "git add"
      ]
    }
  }
}
